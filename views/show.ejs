<% include partials/header.ejs %>
<div style="padding:25px 0;" class="ui main text container">
        
        <div  class="ui top attached segment">
            <div  class="ui huge header"><%=blog.title.toUpperCase()%></div>
            <div class="item">
                <img class="ui rounded centered image"src="<%=blog.image%>" >
                <div class="content">
                    <span style="color:gray;"><%=blog.created.toDateString() %></span>
                </div>
                
                <div style="padding-top:7px;" class="description">
                   <p><%-blog.body%></p> 
                </div>
                
                    
                <div style="padding-top:20px;" >
                    <!--The edit button -->
                        <a href="/blogs/<%=blog._id%>/edit" class="ui button" tabindex="0">Edit</a>
                          
                    <!--The delete button -->
                    <form style="display:inline;" action="/blogs/<%=blog._id%>?_method=delete" method="POST">
                        <button class="ui animated inverted red button" tabindex="0">
                          <div class="visible content">Delete</div>
                          <div class="hidden content">
                            <i class="trash alternate icon"></i>
                          </div>
                        </button>
                    </form>
                    
                    
                </div>
            </div>
        </div>
       
    
   
</div>

<% include partials/footer.ejs %>